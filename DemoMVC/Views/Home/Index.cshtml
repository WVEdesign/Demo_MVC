<img class="d-block w-100 m-auto" src="@Url.Content("~/Images/TopImage.png")" />

<h1>@ViewData["title"]</h1>

<hr>
<div id="sliderindicators" class="carousel slide " data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#sliderindicators" data-slide-to="0" class="active"></li>
        <li data-target="#sliderindicators" data-slide-to="1"></li>
        <li data-target="#sliderindicators" data-slide-to="2"></li>
        <li data-target="#sliderindicators" data-slide-to="3"></li>
        <li data-target="#sliderindicators" data-slide-to="4"></li>
        <li data-target="#sliderindicators" data-slide-to="5"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="carousel-item active">
            <img class="d-block w-75 m-auto" src="~/images/bikes/koers-team-bikes-1.jpg" alt="Slide1">
        </div>
        <div class="carousel-item">
            <img class="d-block w-75 m-auto" src="~/images/bikes/koers-team-bikes-2.jpg" alt="Slide2">
        </div>
        <div class="carousel-item">
            <img class="d-block w-75 m-auto" src="~/images/bikes/koers-team-bikes-3.jpg" alt="Slide3">
        </div>
        <div class="carousel-item">
            <img class="d-block w-75 m-auto" src="~/images/bikes/mountain-team-bikes-1.jpg" alt="Slide3">
        </div>
        <div class="carousel-item">
            <img class="d-block w-75 m-auto" src="~/images/bikes/mountain-team-bikes-2.jpg" alt="Slide4">
        </div>
        <div class="carousel-item">
            <img class="d-block w-75 m-auto" src="~/images/bikes/mountain-team-bikes-3.jpg" alt="Slide5">
        </div>
    </div>
    <a class="carousel-control-prev" href="#sliderindicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#sliderindicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
</div>
<hr>
